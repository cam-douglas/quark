#!/usr/bin/env python3
"""
Think - Autonomous Super Intelligence Launcher

This script launches the Small-Mind Super Intelligence system that:
- Thinks continuously without prompts or commands
- Explores novel ideas in cutting-edge science
- Operates autonomously and safely
"""

import sys
import os
from pathlib import Path

# Add the current directory to Python path
sys.path.insert(0, str(Path(__file__).parent))

def main():
    """Launch the autonomous super intelligence."""
    try:
        print("üß† Small-Mind Super Intelligence")
        print("=" * 50)
        print("Launching autonomous thinking system...")
        print("This system will think continuously and explore novel ideas.")
        print("Press Ctrl+C to stop.")
        print("=" * 50)
        
        # Import and start the super intelligence
        from super_intelligence import SuperIntelligence
        
        # Create and start the system
        super_intelligence = SuperIntelligence()
        super_intelligence.start_autonomous_operation()
        
        # Keep running
        try:
            while super_intelligence.running:
                import time
                time.sleep(1)
        except KeyboardInterrupt:
            print("\nüõë Shutdown requested...")
            super_intelligence.graceful_shutdown(None, None)
            
    except ImportError as e:
        print(f"‚ùå Error: Could not load Super Intelligence system: {e}")
        print("Make sure you're running this from the agent_hub directory.")
        sys.exit(1)
    except Exception as e:
        print(f"‚ùå Unexpected error: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()
